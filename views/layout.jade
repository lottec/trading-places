doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/jquery-ui.css')
    link(rel='stylesheet', href='/taggingJS/example/tag-basic-style.css')
    link(rel='stylesheet', href='/modal/style.css')
    script(src='/javascript/jquery-1.11.1.min.js')
    script(src='/taggingJS/tagging.min.js')
    script(src='/modal/modal.js')
body
  if session.user
    div(class='navigation-container')
      div(class='header-logo')
        a(href='/')
          img(src='images/tradingplaces.png')
      div(class='navigation-item')
        if route == 'mypeople'
          a(class='navigation-item-text selected', href='/mypeople') My People
        else
          a(class='navigation-item-text', href='/mypeople') My People
      div(class='navigation-item')
        if route == 'find'
          a(class='navigation-item-text selected', href='/find') Find
        else
          a(class='navigation-item-text', href='/find') Find
      div(class='right-container')
        span(class='logout-text') #{session.user.username}&nbsp;
          a(href='/users/logout', class='logout') Logout
  div(class='content-wrapper')
    block content
  script(type="text/javascript", src="/javascript/retina.min.js")
