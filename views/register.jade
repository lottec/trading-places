extends layout
block content
   div.register-form
      form(name="register", action="/users/register", method="post")
        div Username:
          input(type="text", name="username")
        div Password:
          input(type="password", name="password")
        div Email:
          input(type="text", name="email")
        div First name:
          input(type="text", name="firstName")
        div Surname:
          input(type="text", name="surname")
        div Number of team members:
          input(type="text", name="numberOfTeamMembers")
        div
          input(type="submit", value="register")
