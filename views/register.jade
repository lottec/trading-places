extends layout
block content
  if user_exists
    div
      p.
        An account with that username already exists. Please choose a different one.
  div.login-logo
    img(src='images/tradingplaces.png')
  div.register-container
    p.header Sign up
    form(name="register", id="register", action="/users/register", method="post")
      div.fields-container
        div
          input(type="text", name="username", id="username", minlength="3", placeholder="Username", required)
        div
          input(type="password", id="password", name="password", minlength="3", placeholder="Password", required)
        div
          input(type="password", id="password_confirmation", name="password_confirmation", minlength="3", placeholder="Confirm password", required)
        div
          input(name="email", type="email", placeholder="Email Address", required)
        div
          input(type="text", name="first_name", id="first_name", placeholder="First name", required)
        div
          input(type="text", name="surname", id="surname", placeholder="Surname", required)
        div
          input(type="number", name="num_team_members", id="num_team_members", placeholder="Total number of team members", required)
        div
          input(type="text", name="department", id="department", placeholder="Department", required)
      div.button-container
        div
          input(type="submit", value="register")

   script.
     $("#register").validate({
       rules: {
         password: 'required',
         password_confirmation: {
           equalTo: '#password'
         }
       },
       errorElement: "div",
       errorPlacement: function(error, element) {
         error.insertBefore(element);
       },
       messages: {
         username: "Please enter a username",
         password: "Please enter a password",
         password_confirmation: "Please confirm your password",
         email: "Please enter a valid email address",
         first_name: "Please enter your first name",
         surname: "Please enter your surname",
         num_team_members: "Please enter the number members in your team",
         department: "Please enter your department"
       }
     });